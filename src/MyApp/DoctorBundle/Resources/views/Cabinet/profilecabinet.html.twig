    <!--// Main Section \\-->
    <div class="careplus-main-section careplus-form-map">
        <div class="careplus-fancy-title">
            <h2>Contact Us At</h2><span><small></small><i class="icon-tool5"></i></span>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="careplus-map-form">
                        <h4>Send Us Message</h4>
                        <form method="post" class="myform" action="http://eyecix.com/html/careplus/process-form.php">
                            <ul>
                                <li><input value="Enter Your Name" onblur="if(this.value == '') { this.value ='Enter Your Name'; }" onfocus="if(this.value =='Enter Your Name') { this.value = ''; }" tabindex="0" type="text" name="name"></li>
                                <li><input value="Enter Your Email" onblur="if(this.value == '') { this.value ='Enter Your Email'; }" onfocus="if(this.value =='Enter Your Email') { this.value = ''; }" tabindex="0" type="email" name="email"></li>
                                <li class="message-box">
                                    <textarea name="message" placeholder="Enter Message Here" ></textarea>
                                </li>
                                <li>
                                    <label><input type="submit" name="submit" value="Send Now"><span></span></label>
                                    <span class="output_message"></span>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div id="map"></div>
    </div>
    <!--// Main Section \\-->

</div>
    {% block javascripts %}
        {{ parent() }}
        {% for x in cab %} }
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDH7EvKwQ6bEZTCZX5MVirXfXTxFWa2R8c"
                type="text/javascript"></script>
        <script>
            var myCenter =new google.maps.LatLng({{ x.latitude }},{{ x.longitude }});
            var marker;
            function initialize() {
                var mapProp= {
                    center: myCenter,
                    zoom: 16,
                    mapTypeId: google.maps.MapTypeId.ROADMAP
                };

                var map = new google.maps.Map(document.getElementById('map'),
                    mapProp);
                var marker = new google.maps.Marker({
                    position: myCenter,
                    animation: google.maps.Animation.BOUNCE
                });
                marker.setMap(map);
            }
            google.maps.event.addDomListner(window,'load',initialize());
            {% endfor %}
        </script>


        {% endblock %}



