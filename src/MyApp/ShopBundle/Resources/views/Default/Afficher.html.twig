{% extends 'MyAppUserBundle::layout.html.twig' %}

{% block body %}
    <div class="careplus-subheader">
        <div class="careplus-subheader-image">
            <span class="careplus-dark-transparent"></span>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1>Shop</h1>
                        <span>Liste des Produits</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="careplus-breadcrumb">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ul>
                            <li><a href="{{ path ('my_app_user_homepage') }}">Homepage</a></li>
                            <li>Shop

                            {% if  is_granted('IS_AUTHENTICATED_REMEMBERED') %}

                                    <a href="{{ path ('shop_AjouterProduit') }}" class="careplus-readmore-btn">Ajouter Produit <span></span></a>


                            {% endif %}





                                <a href="{{ path ('shop_RechercherProduit') }}" class="careplus-readmore-btn">Rechercher Produit <span></span></a>

                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--// SubHeader \\-->








    <!--// Main Content \\-->
    <div class="careplus-main-content">

    <!--// Main Section \\-->
    <div class="careplus-main-section">
    <div class="container">
    <div class="row">

    <div class="col-md-12">
    <div class="careplus-shop careplus-shop-grid">
        <ul class="row">
            {% for lots in Modeles %}
                <li class="col-md-4">
                    <figure><a href ="{{  path ('shop_AfficherDetail', {'id':lots.id, 'type':lots.type, 'libelle':lots.libelle, 'prix':lots.prix, 'categorie':lots.categorie, 'description':lots.description,'tel':lots.tel, 'image':lots.image, 'rating':lots.rating,} ) }}"><img src="{{ asset('img/' ~ lots.image) }}" style="width: 360px; height: 300px"><span><i class="fa fa-link"></i><small></small></span></a></figure>
                    <div class="careplus-shop-grid-text">
                        <h5><a href ="{{  path ('shop_AfficherDetail', {'id':lots.id, 'type':lots.type, 'libelle':lots.libelle, 'prix':lots.prix, 'categorie':lots.categorie, 'description':lots.description,'tel':lots.tel, 'image':lots.image, 'rating':lots.rating,} ) }}">{{ lots.libelle }}</a></h5>
                        <span>{{ lots.prix }}</span>
                        <p>{{ lots.type }}</p>
                        <a href="{{  path ('shop_AfficherDetail', {'id':lots.id, 'type':lots.type, 'libelle':lots.libelle, 'prix':lots.prix, 'categorie':lots.categorie, 'description':lots.description,'tel':lots.tel, 'image':lots.image, 'rating':lots.rating,} ) }}" class="careplus-readmore-btn">Details<span></span></a>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
    </div>
    </div>
    </div>
    </div>
    </div>

    <div class="navigation text-center">
        {{ knp_pagination_render(Modeles) }}
    </div>




    <!--// Main Content \\-->
    <h1>Liste des Produits</h1>
    <table border="1">
        <tr>
            <th>Type</th><th>Libelle</th><th>Prix</th><th>Cat√©gorie</th><th>Description</th><th>Image</th><th>Supprimer</th><th>Update</th>
        </tr>
        {% for lots in Modeles %}
            <tr>
                <td>{{ lots.Type }}</td>
                <td>{{ lots.Libelle }}</td>
                <td>{{ lots.Prix }}</td>
                <td>{{ lots.Categorie }}</td>
                <td>{{ lots.Description}}</td>
                <td>{{ lots.tel}}</td>
                <td>{{ lots.Image }}</td>
                <td><a href ="{{  path ('shop_DeleteProduit', {'id':lots.id} ) }}">Supprimer</a></td>
                <td><a href ="{{  path ('shop_UpdateProduit', {'id':lots.id} ) }}">Update</a></td>
                <td><a href ="{{  path ('shop_AfficherDetail', {'id':lots.id, 'type':lots.type, 'libelle':lots.libelle, 'prix':lots.prix, 'categorie':lots.categorie, 'description':lots.description,'tel':lots.tel, 'image':lots.image, 'rating':lots.rating,} ) }}">Afficher</a></td>

            </tr>
        {% endfor %}
    </table>
{% endblock %}